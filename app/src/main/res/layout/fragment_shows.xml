<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_gridlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarDefaultDelayBeforeFade="1000"
        android:scrollbars="vertical"
        android:stretchMode="none"
        />

    <ProgressBar
        android:id="@+id/gridview_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Green"
        android:indeterminate="true"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fab_shadow_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fab_overlay"
        android:clickable="true"
        android:visibility="gone">

    </FrameLayout>
    

    <LinearLayout
        android:id="@+id/fab_container_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_anchorGravity="bottom|right|end">

        <TextView
            android:id="@+id/anime_sort_fab_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_popular"
            android:layout_marginRight="10dp"
            android:textColor="@color/White"
            android:layout_gravity="center_vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/anime_sort_fab_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_black"
            app:fabSize="normal"
            app:backgroundTint="@color/WhiteSmoke"
            app:elevation="10dp"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@color/Green"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fab_container_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_anchorGravity="bottom|right|end">

        <TextView
            android:id="@+id/anime_sort_fab_two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_genre"
            android:textColor="@color/White"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/anime_sort_fab_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sentiment_very_satisfied_black"
            app:fabSize="normal"
            app:backgroundTint="@color/WhiteSmoke"
            app:elevation="10dp"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@color/Green"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fab_container_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_anchorGravity="bottom|right|end">

        <TextView
            android:id="@+id/anime_sort_fab_three_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_name"
            android:textColor="@color/White"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/anime_sort_fab_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_bold_black"
            app:fabSize="normal"
            app:backgroundTint="@color/WhiteSmoke"
            app:elevation="10dp"
            app:pressedTranslationZ="12dp"
            app:rippleColor="@color/Green"/>

    </LinearLayout>

    <!-- normal == 56dp -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/anime_sort_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/ic_reorder_white"
        app:fabSize="normal"
        app:backgroundTint="@color/MediumBlue"
        app:elevation="10dp"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="12dp"
        app:rippleColor="@color/Green"/>
    />

</RelativeLayout>
